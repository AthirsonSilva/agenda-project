<%- include('includes/head') %>
<%- include('includes/nav') %>

    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>
            <div class="col-lg-8 my-5">
                <h1 class="display-1 text-center">Login / Register</h1>
                <p class="text-center lead">Login into your account or create your now below</p>

                <div class="row login-row">
                    <div class="col-lg my-5">
                        <h4 style="text-align: center;" class="login-title">Login</h4>

                        <form method="post" action="/authentication/login">
                          <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                            <!-- Login form -->
                            <div class="form-group my-2">
                              <label for="exampleInputEmail1">Email address</label>
                              <input type="email" class="form-control" name="email" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
                              <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                            </div>
                            <div class="form-group">
                              <label for="exampleInputPassword1">Password</label>
                              <input type="password" class="form-control" name="password" id="exampleInputPassword1" placeholder="Password">
                            </div>
                           
                            <button type="submit" class="btn btn-primary my-2">Login</button>
                          </form>
                        </div>

                        <!-- Register form -->
                        <div style="margin-left: 10rem;" class="col-lg my-5 register-column">
                            <h4 style="text-align: center;" class="login-title">Register</h4>

                            <form method="post" action="/authentication/register">
                              <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                                <div class="form-group my-2">
                                  <label for="exampleInputEmail1">Email address</label>
                                  <input type="email" class="form-control" name="email" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
                                  <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                                </div>
                                <div class="form-group">
                                  <label for="exampleInputPassword1">Password</label>
                                  <input type="password" class="form-control" name="password" id="exampleInputPassword1" placeholder="Password">
                                </div>
                               
                                <button type="submit" class="btn btn-primary my-2">Signup</button>
                              </form>
                    </div>
                </div>

            </div>
            <div class="col-lg-2"></div>
        </div>
    </div>
  
<%- include('includes/footer') %>  