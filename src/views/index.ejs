<%- include('includes/head') %> <%- include('includes/nav') %>

<div class="container">
	<div class="row">
		<div class="col-lg-2"></div>
		<div class="col-lg-8 my-5">
			<h1 class="display-1 text-center">Little Agenda 2000</h1>
			<p class="text-center lead">Your best buddy for daily reminders</p>

			<%- include('includes/messages') %>

			<div class="responsive-table">
				<table class="table my-3">
                    <% if (contacts.length > 0) { %> 
                        <thead class="table table-dark thead-dark">
                            <tr>
                                <th>Name</th>
                                <th>Surname</th>
                                <th>Phone</th>
                                <th>Email</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        <% contacts.forEach(contact => { %>
                            <tr>
                                <td><%= contact.name %></td>
                                <td><%= contact.surname %></td>
                                <td><%= contact.phone %></td>
                                <td><%= contact.email %></td>
                                <td>
                                    <a type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#edit<%= contact._id %>" role="button">Edit</a>
                                    <a type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#delete<%= contact._id %>" role="button">Delete</a>
                                </td>
                            </tr>

                             <form action="/contacts/edit/<%= contact._id %>" method="post">
                                <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                                <div class="modal fade" id="edit<%= contact._id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">Editar contato</h5>
                                                <button type="button" class="close" data-dismiss="modal" data-bs-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <label for="nome_evento">Name</label>
                                                <input type="text" class="form-control" name="nome_evento" id="nome_evento"  required>

                                                <label for="descricao_evento">Surname</label>
                                                <input type="text" class="form-control" name="descricao_evento" id="descricao_evento" required>

                                                <label for="data_evento">Phone</label>
                                                <input type="date" class="form-control" name="data_evento" id="data_evento" required>

                                                <label for="hora_evento">Email</label>
                                                <input type="time" class="form-control" name="hora_evento" id="hora_evento"  required>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                <button type="submit" class="btn btn-primary">Submit</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>

                            <form action="/contacts/delete/<%= contact._id %>" method="get">
                            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                            <div class="modal fade" id="delete<%= contact._id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Delete contact</h5>
                                            <button type="button" class="close" data-dismiss="modal" data-bs-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            Are you sure to delete this contact?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                            <button type="submit" class="btn btn-primary">Delete</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <% }) %>   
                        </tbody>
                    <% } else { %>
                        <tr>
                            <td colspan="4" class="text-center">Login and register a new contact to see your contacts list</td>
                        </tr>
                    <% } %> 
				</table>
			</div>


		</div>
		<div class="col-lg-2"></div>
	</div>
</div>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
