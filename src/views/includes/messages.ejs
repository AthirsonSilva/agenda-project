<% if (errors.length > 0) { %>
    <div class="row">
        <div class="col my-5">
            <div class="alert alert-danger">
                <% errors.forEach((error) => { %>
                        <%= error %><br>
                    <% }) %> 
                </div>
            </div>
        </div>      
<%  } %>

<% if (success.length > 0) { %>
    <div class="row">
        <div class="col my-5">
            <div class="alert alert-success">
                <% success.forEach((message) => { %>
                        <%= message %><br>
                    <% }) %> 
                </div>
            </div>
        </div>      
<%  } %>

<% if (info.length > 0) { %>
    <div class="row">
        <div class="col my-5">
            <div class="alert alert-info">
                <% info.forEach((message) => { %>
                        <%= message %><br>
                    <% }) %> 
                </div>
            </div>
        </div>      
<%  } %>